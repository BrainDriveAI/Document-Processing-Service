# Production Environment Variables for BrainDrive Document AI
# Copy this file to .env and fill in the actual values

# ===== AUTHENTICATION =====
# CRITICAL: Set to false in production
DISABLE_AUTH=false
AUTH_METHOD=api_key

# Generate using: ./generate_keys.sh --api-key
AUTH_API_KEY=sk-your-production-api-key-here

# Optional: JWT authentication (generate using: ./generate_keys.sh --jwt-secret)
# JWT_SECRET=your-jwt-secret-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRE_MINUTES=60

# ===== APPLICATION =====
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8080

# ===== DOMAIN CONFIGURATION =====
# Update these with your actual domain
DOMAIN=your-domain.com
GRAFANA_DOMAIN=monitoring.your-domain.com

# ===== REDIS =====
REDIS_PASSWORD=your-secure-redis-password-here

# ===== MONITORING =====
GRAFANA_PASSWORD=your-secure-grafana-password-here

# ===== FILE PROCESSING =====
UPLOADS_DIR=/app/data/uploads
UPLOAD_MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_MAX_PART_SIZE=52428800   # 50MB
UPLOAD_MAX_FIELDS=100
TEMP_DIR=/app/data/temp
SUPPORTED_FORMATS=pdf,docx,doc,txt

# ===== DOCUMENT PROCESSING =====
ENABLE_CUDA=false
SPACY_MODEL=/app/spacy_models/en_core_web_sm/en_core_web_sm-3.8.0
DEFAULT_CHUNKING_STRATEGY=hierarchical
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=2000

# ===== PERFORMANCE =====
# Tuned for production/cloud deployment
MAX_CONCURRENT_PROCESSES=2
PROCESSING_TIMEOUT=180

# ===== LOGGING =====
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# ===== CORS =====
# Restrict to your actual domains in production
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# ===== SSL CERTIFICATES =====
# Paths to SSL certificates (mount these volumes)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
